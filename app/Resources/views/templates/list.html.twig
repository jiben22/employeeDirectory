{% extends 'base_layout.html.twig' %}

{% block title %}{{ parent() }} - Annuaire{% endblock %}
{% block stylesheets %}
<style>
    tbody i {
        padding-left: 13px;
    }
</style>
{% endblock %}


{% block body %}
        <div id="page-wrapper" >
            <div id="page-inner">
                <div class="row">
                    <div class="col-md-12">
                    <h2>Liste des employés</h2>
                    </div>
                </div>
                <!-- /. ROW  -->
                <hr/>

            <div class="row">
                <div class="col-md-12">
                    <!-- Advanced Tables -->
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>Nom</th>
                                            <th>Prénom</th>
                                            <th>Job</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for employee in employees %}
                                        <tr>
                                            <td>{{ employee.lastname }}</td>
                                            <td>{{ employee.firstname }}</td>
                                            <td>{{ employee.job }}</td>
                                            <td>
                                                <a href="{{ path('edit') }}">
                                                    <i class="fa fa-edit fa-2x" title="Edition"></i>
                                                </a>
                                                <a href="{{ path('details') }}">
                                                    <i class="fa fa-eye fa-2x" title="Détails"></i>
                                                </a>
                                                <a href="{{ path('delete') }}">
                                                    <i class="fa fa-trash fa-2x" title="Supprimer"></i></td>
                                                </a>
                                        </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                    <!--End Advanced Tables -->
                </div>
            </div>
        </div>
    </div>
    <!-- /. PAGE INNER  -->
</div>
{% endblock %}
